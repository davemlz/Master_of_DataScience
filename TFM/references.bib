issn = {09645691},
journal = {Ocean and Coastal Management},
keywords = {Area estimate,Digital classification,Landsat 8 OLI,Seagrass,Water column correction},
number = {May 2017},
pages = {16--25},
publisher = {Elsevier},
title = {{A comprehensive geospatial assessment of seagrass distribution in India}},
url = {https://doi.org/10.1016/j.ocecoaman.2017.10.032},
