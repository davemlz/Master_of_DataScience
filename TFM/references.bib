issn = {02727714},
journal = {Estuarine, Coastal and Shelf Science},
keywords = {Australia,Continental-scale,Digital elevation model,Intertidal zone,Landsat,Remote sensing,Tidal modelling},
number = {October 2018},
pages = {115--128},
publisher = {Elsevier},
title = {{Between the tides: Modelling the elevation of Australia's exposed intertidal zone at continental scale}},
