keywords = {Cloud detection,Cloud possibility,Data simulation,Hyperspectral sensor,Multispectral sensors,Pixel dataset},
pages = {70--88},
title = {{A cloud detection algorithm-generating method for remote sensing data at visible to short-wave infrared wavelengths}},
volume = {124},
year = {2017}
