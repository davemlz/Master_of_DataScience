file = {:C$\backslash$:/Users/Dave Mont/Desktop/ScienceDirect{\_}articles{\_}13Feb2020{\_}13-56-54.962/Flooded-area-satellite-monitoring-within-a-R{\_}2019{\_}Remote-Sensing-Application.pdf:pdf},
