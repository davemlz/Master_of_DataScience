keywords = {2SeaColour,MERIS,MODTRAN,OLCI,Optically shallow waters,Radiative transfer modeling,Remote sensing,Sea-bottom effect,Sentinel-3,The Wadden Sea,Tidal waters,Water quality monitoring},
number = {March 2019},
