doi = {10.1016/j.jenvman.2017.10.015},
file = {:C$\backslash$:/Users/Dave Mont/Desktop/ScienceDirect{\_}articles{\_}13Feb2020{\_}13-56-54.962/Remote-sensing-based-deforestation-analysis-in-Mahana{\_}2018{\_}Journal-of-Enviro.pdf:pdf},
issn = {10958630},
