journal = {Remote Sensing},
keywords = {Aerosols,Atmospheric correction,CAMS,MACCS,MAJA,Remote sensing,Sentinel-2,Surface reflectance,Time series},
number = {12},
title = {{Using copernicus atmosphere monitoring service products to constrain the aerosol type in the atmospheric correction processor MAJA}},
