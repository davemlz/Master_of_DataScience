keywords = {Brahmaputra,Classification,Drivers,Dyna-CLUE,Mahanadi,Mapping,$\beta$-coefficient},
pages = {1192--1203},
publisher = {Elsevier Ltd},
title = {{Remote sensing based deforestation analysis in Mahanadi and Brahmaputra river basin in India since 1985}},
url = {https://doi.org/10.1016/j.jenvman.2017.10.015},
volume = {206},
