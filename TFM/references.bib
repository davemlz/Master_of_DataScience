journal = {Remote Sensing of Environment},
keywords = {Coastal,Geostatistics,LiDAR,Multi-platform,Multispectral},
number = {March},
title = {{A comparison of Landsat 8, RapidEye and Pleiades products for improving empirical predictions of satellite-derived bathymetry}},
