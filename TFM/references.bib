issn = {1095922X},
journal = {Journal of Arid Environments},
keywords = {Burabay,Central Asia,Climate change,Endorheic,Evaporation,Kazakhstan,Lake,Landsat,Semi-arid},
number = {September 2018},
pages = {42--55},
publisher = {Elsevier},
title = {{Estimation of water storage changes in small endorheic lakes in Northern Kazakhstan}},
