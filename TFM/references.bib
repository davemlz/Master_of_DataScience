doi = {10.1016/j.rse.2015.07.001},
file = {:C$\backslash$:/Users/Dave Mont/Desktop/ScienceDirect{\_}articles{\_}13Feb2020{\_}13-56-54.962/Landsat-based-mapping-of-thermokarst-lake-dynamics-on-the{\_}2015{\_}Remote-Sensin.pdf:pdf},
issn = {00344257},
journal = {Remote Sensing of Environment},
keywords = {Arctic,Lake,Landsat,Thermokarst},
pages = {194--204},
publisher = {Elsevier B.V.},
title = {{Landsat-based mapping of thermokarst lake dynamics on the Tuktoyaktuk Coastal Plain, Northwest Territories, Canada since 1985}},
