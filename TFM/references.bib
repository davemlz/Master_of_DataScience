journal = {Environmental Development},
keywords = {Environmental changes,Local experts,Perceptions,SW-Nigeria,Surface water,Vegetation},
pages = {33--47},
publisher = {Elsevier},
title = {{The local experts' perception of environmental change and its impacts on surface water in Southwestern Nigeria}},
