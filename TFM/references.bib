issn = {00253227},
journal = {Marine Geology},
keywords = {Anmok beach,Crescentic sandbars,Human interventions,Sandbar dynamics,Satellite imagery},
number = {August},
pages = {1--11},
publisher = {Elsevier},
title = {{Analysing decadal-scale crescentic bar dynamics using satellite imagery: A case study at Anmok beach, South Korea}},
